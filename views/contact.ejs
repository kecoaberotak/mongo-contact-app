<div class="container mt-3">
  <row>
    <col-md-8>
      <h2>Daftar Kontak</h2>

      <a href="/contact/add" class="btn btn-primary">Tambah Data Contact</a>

      <% if (msg.length != 0) { %>
      <div class="alert alert-success" role="alert"><%= msg %></div>
      <% } %>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">Nomor HP</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
            <tr>
              <td colspan="4">
                <div class="alert alert-danger" role="alert">
                  Kontak masih kosong.
                </div>
              </td>
            </tr>
          <% } else { %> 
            <% contacts.forEach((contact, index) => { %>
              <tr>
                <th scope="row"><%= index + 1 %></th>
                <td><%= contact.nama %></td>
                <td><%= contact.nomorHp %></td>
                <td><a href="/contact/<%= contact.nama %>" class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i> detail</a></td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </col-md-8>
  </row>
</div>