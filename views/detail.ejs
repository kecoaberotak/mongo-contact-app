<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Contact</h2>
      <% if (!contact) { %>
        <div class="alert alert-danger" role="alert">
          Kontak tidak ditemukan, <a href="/contact" class="alert-link">kembali ke daftar kontak</a>.
        </div>
      <% }else { %>       
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= contact.nama %></h5>
            <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.nomorHp %></h6>
            <% if (contact.email) { %>
              <p class="card-text"><%= contact.email %></p>
            <% } %>
            <a href="/contact/edit/<%= contact.nama %>" class="btn btn-info badge"">Edit</a>
            <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger badge" onclick="return confirm('Ingin menghapus contact?')">Hapus</a>
            <a href="/contact" class="card-link d-block mt-3">&laquo; kembali ke daftar kontak</a>
          </div>
        </div> 
      <% } %>
    </div>
  </div>
</div>